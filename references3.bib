	file = {Full Text:C\:\\Users\\Sara\\Zotero\\storage\\MANFDI5H\\Kazmierczak et al. - 2016 - Global Dissemination of blaKPC into Bacterial Species beyond Klebsiella pneumoniae.pdf:application/pdf},
}

@article{vale_detection_2021,
